# schedule: "@replace_schedule" 
steps:
  - name: scrape
    executor:
      type: docker
      config:
        image: localhost:5000/@replace_scraper_name:latest
        autoRemove: true
    command: python scrape.py

  - name: process
    executor:
      type: docker
      config:
        image: localhost:5000/@replace_scraper_name:latest
        autoRemove: true
    command: python post_process.py

  - name: export
    executor:
      type: docker
      config:
        image: localhost:5000/@replace_scraper_name:latest
        autoRemove: true
    command: python export.py